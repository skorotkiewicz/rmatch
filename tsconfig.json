{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
    }
  },
  "exclude": ["node_modules", "dist", "tests"]
}
